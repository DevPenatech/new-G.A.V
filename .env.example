# .env.example

# === Configuração do Banco de Dados PostgreSQL ===
# Usado principalmente pelo serviço 'api_negocio'
POSTGRES_USER=gav_user
POSTGRES_PASSWORD=senha_forte_trocar
POSTGRES_DB=gav_db
POSTGRES_HOST=gav_db # O nome do serviço do banco no docker-compose
POSTGRES_PORT=5432

# === Configuração do Ollama ===
# Usado pelo serviço 'gav_orquestrador'
OLLAMA_HOST=http://host.docker.internal:11434 # Endereço especial para acessar o host a partir do contêiner
OLLAMA_MODEL_NAME=llama3.1

# === URLs de Serviço Interno ===
# Usado pelo 'gav_orquestrador' para se comunicar com a 'api_negocio'
API_NEGOCIO_URL=http://api_negocio:8001

# === Configuração do Oracle (para o script de ETL) ===
ORACLE_USER=seu_usuario_oracle
ORACLE_PASSWORD=sua_senha_oracle
ORACLE_DSN=seu_host:1521/seu_servico # Ex: localhost:1521/XEPDB1